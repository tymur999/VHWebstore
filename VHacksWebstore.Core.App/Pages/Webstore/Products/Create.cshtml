@page
@model VHacksWebstore.Core.App.Pages.Webstore.Products.CreateModel
@{
}
<form enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <input asp-for="Input.Description"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.Price"></label>
        <input asp-for="Input.Price"/>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" type="file" accept="image/png,image/jpg,image/jpeg" multiple/>
    </div>
    <div class="form-group">
        <button type="submit"></button>
    </div>
</form>
